<body>
    <div class="jumbotron align-center">
        <h1>Continuing Education</h1>
        <p class="lead">Continous education is the key to self improvement and we are here to help.</p>
    </div>
    <header id="header">
        <h1>&copy; Chris Wong @DateTime.Now.Year</h1>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li><a href="@Url.Action("TileView","Cours")">Courses</a></li>
                <li><a href="@Url.Action("Index","CourseCompletions")">Completed Courses</a></li>
                <li><a href="@Url.Action("Index", "LessonViews", new { id = ViewBag.id })">Completed Lessons</a></li>
                @if (!User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_LoginPartial")
                }
                @if (User.Identity.IsAuthenticated)

                {
                    <li><a href="#acct">Account</a></li>
                }
                @RenderSection("contact", false)                
            </ul>
        </nav>
    </header>
    @RenderBody()
    <div id="acct" class="panel">
        @Html.Partial("_LoginPartial")
        @if (User.IsInRole("Admin"))
        {
            <li><a href="@Url.Action("Index","UsersAdmin")">Users</a></li>
            <li><a href="@Url.Action("Index", "RolesAdmin")">Roles</a></li>
        }
    </div>
